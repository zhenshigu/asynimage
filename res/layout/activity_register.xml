<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip">

        <TextView
            android:id="@+id/center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="注册"
            android:textColor="#ffffffff"
            android:textSize="18.0dip"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="55dip"
            android:layout_height="35.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:src="@drawable/ic_back" />
       
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:text="用户名"
                    android:textColor="#ff404040"
                    android:textSize="16.0dip" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip" >

                    <EditText
                        android:id="@+id/user_name_edit"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:hint="register_username_hint"
                        android:imeOptions="actionNext"
                        android:maxLength="20"
                        android:paddingLeft="10.0dip"
                        android:singleLine="true"
                        android:textSize="16.0dip" />

                    <ImageView
                        android:id="@+id/user_name_clear"
                        android:layout_width="25dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="0dip"
                        android:paddingRight="0dip"
                        android:src="@drawable/close_btn"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/user_name_error"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="68.0dip"
                android:text="用户名为4-20个字符"
                android:textColor="#ffff0000"
                android:textSize="13.0dip"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5.0dip"
                    android:text="密        码"
                    android:textColor="#ff404040"
                    android:textSize="16.0dip" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip" >

                    <EditText
                        android:id="@+id/password_edit"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:hint="userpassword_rule2"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:paddingLeft="10.0dip"
                        android:singleLine="true"
                        android:textSize="16.0dip" />

                    <ImageView
                        android:id="@+id/password_clear"
                        android:layout_width="25dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="0dip"
                        android:paddingRight="0dip"
                        android:src="@drawable/close_btn"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/password_error"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="68.0dip"
                android:text="密码至少为6位数"
                android:textColor="#ffff0000"
                android:textSize="13.0dip"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5.0dip"
                    android:text="重复密码"
                    android:textColor="#ff404040"
                    android:textSize="16.0dip" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip" >

                    <EditText
                        android:id="@+id/confirm_password_edit"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:hint="register_password_hint2"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:paddingLeft="10.0dip"
                        android:singleLine="true"
                        android:textSize="16.0dip" />

                    <ImageView
                        android:id="@+id/confirm_password_clear"
                        android:layout_width="25dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="0dip"
                        android:paddingRight="0dip"
                        android:src="@drawable/close_btn"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/confirm_password_error"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="68.0dip"
                android:text="您两次输入的密码不一样，请再次输入"
                android:textColor="#ffff0000"
                android:textSize="13.0dip"
                android:visibility="gone" />
             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >
            
			<TextView
                    android:layout_width="65.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5.0dip"
                    android:text="性别"
                    android:textColor="#ff404040"
                    android:textSize="16.0dip" />
            <Spinner
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
		</LinearLayout>
    <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5.0dip"
                    android:text="邮箱"
                    android:textColor="#ff404040"
                    android:textSize="16.0dip" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip" >

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:hint="email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLength="16"
                        android:paddingLeft="10.0dip"
                        android:singleLine="true"
                        android:textSize="16.0dip" />

                    <ImageView
                        android:id="@+id/email_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:src="@drawable/close_btn"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/email_error"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="68.0dip"
                android:text="邮箱要规范"
                android:textColor="#ffff0000"
                android:textSize="13.0dip"
                android:visibility="gone" />
                <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5.0dip"
                    android:text="手机"
                    android:textColor="#ff404040"
                    android:textSize="16.0dip" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip" >

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:hint="phone"
                        android:imeOptions="actionNext"
                        android:maxLength="16"
                        android:paddingLeft="10.0dip"
                        android:singleLine="true"
                        android:textSize="16.0dip" />

                    <ImageView
                        android:id="@+id/phone_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:src="@drawable/close_btn"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/phone_error"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="68.0dip"
                android:text="手机为数字"
                android:textColor="#ffff0000"
                android:textSize="13.0dip"
                android:visibility="gone" />
                <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5.0dip"
                    android:text="省"
                    android:textColor="#ff404040"
                    android:textSize="16.0dip" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip" >

                    <EditText
                        android:id="@+id/shen"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:hint="shen"
                        android:imeOptions="actionNext"
                        android:maxLength="16"
                        android:paddingLeft="10.0dip"
                        android:singleLine="true"
                        android:textSize="16.0dip" />

                    <ImageView
                        android:id="@+id/shen_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:src="@drawable/close_btn"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/shen_error"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="68.0dip"
                android:text="省不能为空"
                android:textColor="#ffff0000"
                android:textSize="13.0dip"
                android:visibility="gone" />
                <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5.0dip"
                    android:text="市"
                    android:textColor="#ff404040"
                    android:textSize="16.0dip" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip" >

                    <EditText
                        android:id="@+id/shi"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:hint="shi"
                        android:imeOptions="actionNext"
                        android:maxLength="16"
                        android:paddingLeft="10.0dip"
                        android:singleLine="true"
                        android:textSize="16.0dip" />

                    <ImageView
                        android:id="@+id/shi_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:src="@drawable/close_btn"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/shi_error"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="68.0dip"
                android:text="市不能为空"
                android:textColor="#ffff0000"
                android:textSize="13.0dip"
                android:visibility="gone" />
                          <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5.0dip"
                    android:text="县"
                    android:textColor="#ff404040"
                    android:textSize="16.0dip" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip" >

                    <EditText
                        android:id="@+id/xian"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:hint="xian"
                        android:imeOptions="actionNext"
                        android:maxLength="16"
                        android:paddingLeft="10.0dip"
                        android:singleLine="true"
                        android:textSize="16.0dip" />

                    <ImageView
                        android:id="@+id/xian_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:src="@drawable/close_btn"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/xian_error"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="68.0dip"
                android:text="县不能为空"
                android:textColor="#ffff0000"
                android:textSize="13.0dip"
                android:visibility="gone" />

            <Button
                android:id="@+id/register_button"
                android:layout_width="200.0dip"
                android:layout_height="45.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dip"
                android:text="立即注册"
                android:textSize="16.0dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>